class Solution{
public:	
	// Returns count buildings that can see sunlight
	int countBuildings(int h[], int n) {
	    // code here
	    
	    int ans=1;
	    int max_el=h[0];
	    for(int i=1;i<n;i++)
	    {
	        if(h[i]>max_el)
	        {
	            max_el=h[i];
	            ans++;
	        }
	    }
	    return ans;
	}
};
